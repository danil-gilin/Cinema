<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/imm_actor_first"
            android:layout_width="50dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/debug_cinema" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_actor_txt_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphik_regular"
            android:maxLines="1"
            android:text="Владимир Онохов"
            android:textColor="#272727" />

        <TextView
            android:id="@+id/name_actor_in_film_txt_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/graphik_regular"
            android:maxLines="1"
            android:text="Лешка"
            android:textColor="#838390"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>