<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_cinema_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/cinema_img2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/debug_cinema" />

            <TextView
                android:id="@+id/cinemaRating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rating_shape"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="7.8"
                android:textColor="#FFFFFF"
                android:textSize="6sp" />

            <ImageView
                android:id="@+id/gradient_img2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:visibility="gone"
                app:srcCompat="@drawable/gradient_cinema" />

            <ImageView
                android:id="@+id/cinema_seen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/cinema_seen" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cinema_name_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/graphik_regular"
            android:maxLines="1"
            android:text="Близкие"
            android:textColor="#272727" />

        <TextView
            android:id="@+id/cinema_genre2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="драма"
            android:textColor="#838390" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>