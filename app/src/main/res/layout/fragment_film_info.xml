<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/filmInfoScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="185dp"
        tools:context=".presenter.home.homepage.filmInfo.filmInfoAll.FilmInfoFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/film_full_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/debug_cinema" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_film_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="28dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/poster_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/short_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="6.4 Китобой"
                    android:textColor="#B5B5C9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/short_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="2020, драма, приключения"
                    android:textColor="#B5B5C9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/short_info_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Россия, 1 ч 33 мин, 16+"
                    android:textColor="#B5B5C9"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="94dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="94dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/icon_like_film" />

                    <ImageView
                        android:id="@+id/bookmarks_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/icon_bookmarks" />

                    <ImageView
                        android:id="@+id/watch_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/icon_un_watch" />

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/icon_share" />

                    <ImageView
                        android:id="@+id/dop_menu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/icon_dop_menu" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <TextView
                android:id="@+id/film_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/graphik_regular"
                android:ellipsize="end"

                android:text="Молодые москвичи бегут от своих проблем
                в русскую глушь. Мистическая утопия Дмитрия Глуховского  \n \nСтолкнувшись с неразрешимыми проблемами, пять молодых москвичей убегают в монастырь неподалеку от полузаброшенной деревни Топи. Они воспринимают rtrtrgfdgdsfgfdsg"
                android:textColor="#272727"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linear_serila_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="26dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="26dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/graphik_medium"
                        android:text="Сезоны и серии"
                        android:textColor="#272727"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/graphik_regular"
                        android:gravity="end"
                        android:text="Все"
                        android:textColor="#3D3BFF"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sesson_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/graphik_regular"
                    android:text="1 сезон, 7 серий"
                    android:textColor="#838391"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.example.cinema.customView.ListCinemaCustomView
                android:id="@+id/rc_actor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

            <com.example.cinema.customView.ListCinemaCustomView
                android:id="@+id/rc_film_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

            </com.example.cinema.customView.ListCinemaCustomView>

            <com.example.cinema.customView.ListCinemaCustomView
                android:id="@+id/rc_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

            <com.example.cinema.customView.ListCinemaCustomView
                android:id="@+id/rc_film"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>